<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="@dimen/db_item_margin"
tools:context=".fragments.HrDbFragment"
android:clickable="true"
android:orientation="horizontal"
android:weightSum="1"
    android:gravity="center"
    android:minHeight="@dimen/detail_item_height">

<TableRow android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="false">
    <ImageView
        android:id="@+id/db_device_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:src="@android:drawable/ic_lock_idle_alarm"
        android:contentDescription="alarm_icon"
        android:minWidth="30dp"
        android:minHeight="30dp"
        android:theme="@style/AppTheme"
        android:layout_margin="6dp" />

    <TableLayout android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_list_item_text"
                android:textColor="@android:color/black"
                android:text="Test Alarm"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>
</TableRow>



</TableLayout>
